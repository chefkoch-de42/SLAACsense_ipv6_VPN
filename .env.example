# Docker Image Configuration
# Override the default Docker image if needed
DOCKER_IMAGE=ghcr.io/notherealmarco/slaacsense:latest

# OPNsense Configuration
OPNSENSE_URL=
OPNSENSE_API_KEY=
OPNSENSE_API_SECRET=

# Technitium DNS Configuration
TECHNITIUM_URL=
TECHNITIUM_TOKEN=

# General Settings
DNS_ZONE_SUBNETS=
DO_V4=false
VERIFY_HTTPS=true
CLOCK=60

# Optional: Technitium PTR Catalog Settings
#TECHNITIUM_PTR_CATALOG=cluster-catalog.dns.local
#TECHNITIUM_USE_SOA_SERIAL_DATE_SCHEME=true
#TECHNITIUM_IPV6_PTR_PREFIXLEN=64
#TECHNITIUM_ZONE_CREATE_FALLBACK_NO_CATALOG=true

# WireGuard Support
# Enable WireGuard client DNS synchronization
#ENABLE_WIREGUARD=false
# Map WireGuard instance names to DNS zones: "instance_name=dns.zone,another=other.zone"
#WG_INSTANCES_ZONES=wg1=vpn-wg1.example1.com

